<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="t4.csc413.smartchef.FragF"
    android:background="#eafff9"
    android:backgroundTintMode="src_over"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click below to youtube,google maps,recipe site"
        android:id="@+id/T2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#222222"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/YT"
        android:src="@drawable/youtube"
        android:onClick="bowser"
        android:layout_below="@+id/T2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating for Recipe"
        android:id="@+id/T1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#222222"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RB"
        android:layout_below="@+id/T1"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/GMButton"
        android:src="@drawable/gmap"
        android:layout_below="@+id/YT"
        android:layout_alignLeft="@+id/YT"

        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click Google Maps icon for nearby Stores"
        android:id="@+id/textView2"
        android:layout_below="@+id/YT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#222222"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Click arrow to visit Recipe Site"
        android:id="@+id/textView3"
        android:layout_below="@+id/GMButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#222222"
        />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/SiteButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow"
        android:layout_below="@+id/GMButton" />

</RelativeLayout>
</ScrollView>
    </RelativeLayout>