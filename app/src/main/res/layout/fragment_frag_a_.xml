<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eafff9"
    tools:context="t4.csc413.smartchef.FragA"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eafff9">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment A"
        android:id="@+id/TextFA"
        android:textSize="24sp"
        android:textColor="#040201"
        android:layout_below="@+id/blinkText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Add Ingredients to Evernote   "
        android:id="@+id/SiteButton"
        android:background="@layout/button"
        android:textColor="#040201"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/blinkText"
        android:layout_alignEnd="@+id/blinkText"
        android:layout_below="@+id/TextFA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Save Recipe into Database   "
        android:id="@+id/SQLButton"
        android:background="@layout/button"
        android:textColor="#040201"
        android:layout_below="@+id/SiteButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoppinglist"
        android:background="@layout/button"
        android:textColor="#040201"
        android:text="Save ingredients to Shopping List"
        android:layout_below="@+id/SQLButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/blinkText"
        android:layout_alignEnd="@+id/blinkText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Swipe left to see more! --->"
        android:id="@+id/blinkText"
        android:fontFamily="Bold"
        android:textColor="#222222"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
</ScrollView>



</RelativeLayout>

