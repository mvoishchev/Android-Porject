<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/recipe_name"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="24dp"
        android:paddingLeft="4dp"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Instructions"
        android:id="@+id/viewInstructions"
        android:layout_below="@+id/recipe_name"
        android:background="@layout/button"
        android:layout_alignLeft="@+id/recipe_name"
        android:layout_alignStart="@+id/recipe_name"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Recipe"
        android:background="@layout/button"
        android:id="@+id/delete"
        android:layout_alignTop="@+id/viewInstructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
</RelativeLayout>
